{ 
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an array of individual article from specified article_id",
    "queries": ["article_id"],
    "exampleResponse": {
      "articles/3": [
        {
          "author": "icellusedkars",
          "title": "Eight pug gifs that remind me of mitch",
          "article_id": 3,
          "body": "some gifs",
          "created_at": "2020-11-03T09:12:00.000Z",
          "topic": "mitch",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/article": {
    "description": "returns an array of all article objects",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "author": "icellusedkars",
          "title": "Eight pug gifs that remind me of mitch",
          "article_id": 3,
          "created_at": "2020-11-03T09:12:00.000Z",
          "topic": "mitch",
          "votes": 0,
          "comment_count": "2" , 
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "returns an array of all comments for specified article_id",
    "queries": ["article_id"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 11, 
          "votes": 0,
          "created_at": "2020-09-19T23:10:00.000Z",
          "author": "icellusedkars",
          "body": "Ambidextrous marsupial",
          "article_id": 3
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts and return an upated comment for specified article_id",
    "queries": ["article_id"],
    "exampleResponse": {
      "addedComment": [
        {
          "comment_id": 19, 
          "votes": 0,
          "created_at": "2020-09-19T23:10:00.000Z",
          "author": "lurker",
          "body": "Hellllloooooo world!",
          "article_id": 7
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the votes an returns updated chosen article",
    "queries": ["article_id"],
    "exampleResponse": {
      "updatedArticle": [
        {
          "author": "butter_bridge",
          "title": "Living in the shadow of a great man",
          "article_id" : 1,
          "body": "I find this existence challenging",
          "created_at": "date",
          "topic": "mitch",
          "votes": 150,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes the appropriate comment",
    "queries": ["comment_id"],
    "exampleResponse": "status_code 204"
  }, 
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "username": "rogersop",
          "name": "paul",
          "avatar_url": "https://avatars2.githubusercontent.com/u/24394918?s=400&v=4"
        }
      ]
    }
  }
}



